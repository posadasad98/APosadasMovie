@model Movie
@{
    ViewData["Title"] = "GetFavorites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetFavorites</h1>
<h4 class="mt-4 mb-5"><strong>LISTA DE FAVORITAS</strong></h4>
<link rel="stylesheet" href="~/css/Estilo/Movie.css">
<div class="row">
    @foreach (Movie movie in Model.Movies)
    {
        
            <div class="container">
                <div class="card" id="movie1">
                    <img src="@movie.Poster" alt="Película 1">
                    <div class="overlay">
                        <h3>@movie.Nombre</h3>
                        <p>@movie.Descripcion</p>
                        <a class="btn-favorite" href="@Url.Action("Add", "Movie", new {IdPelicula= movie.Id})">Eliminar de favoritos</a>
                    </div>
                </div>
            </div>
  
    }
</div>